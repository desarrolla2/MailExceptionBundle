{% extends '@MailException/Mail/layout.html.twig' %}
{% block body %}
  <table style="background: #fff;">
    <tr>
      <td><h1>{{ class }}: {{ message }}</h1></td>
    </tr>
  </table>
  <table style="background: #fff;">
    <tr>
      <td>
        <h2>{{ 'information'|trans|capitalize }}</h2>
        <ol>
          <li>Date: {{ 'now' | date("F jS \\a\\t g:ia") }}</li>
          {% if host and path %}
            <li>Path: <a href="{{ host }}{{ path }}"> {{ host }}{{ path }}</a></li>
          {% endif %}
          <li>Client ip: {{ ip }}</li>
          {% if user %}
            <li>User: {{ user }}</li>
          {% endif %}
          {% if file %}
            <li>File: {{ file }}</li>
          {% endif %}
          {% if line %}
            <li>Line: {{ line }}</li>
          {% endif %}
        </ol>
      </td>
    </tr>
  </table>
  {% if extra|length %}
    <table style="background: #fff;">
      <tr>
        <td>
          <h2>{{ 'extra information'|trans|capitalize }}</h2>
          <ol>
            {% for key, value in extra %}
              <li>{{ key }}: {{ value_dump(value) }}</li>
            {% endfor %}
          </ol>
        </td>
      </tr>
    </table>
  {% endif %}
  {% if get|length %}
    <table style="background: #fff;">
      <tr>
        <td>
          <h2>{{ 'get parameters'|trans|capitalize }}</h2>
          <ol>
            {% for key, value in get %}
              <li>{{ key }}: {{ value_dump(value) }}</li>
            {% endfor %}
          </ol>
        </td>
      </tr>
    </table>
  {% endif %}
  {% if post|length %}
    <table style="background: #fff;">
      <tr>
        <td>
          <h2>{{ 'post parameters'|trans|capitalize }}</h2>
          <ol>
            {% for key, value in post %}
              <li>{{ key }}: {{ value_dump(value) }}</li>
            {% endfor %}
          </ol>
        </td>
      </tr>
    </table>
  {% endif %}
  {% if session|length %}
    <table style="background: #fff;">
      <tr>
        <td>
          <h2>{{ 'session'|trans|capitalize }}</h2>
          <ol>
            {% for key, value in session %}
              <li>{{ key }}: {{ value_dump(value) }}</li>
            {% endfor %}
          </ol>
        </td>
      </tr>
    </table>
  {% endif %}
  {% if headers|length %}
    <table style="background: #fff;">
      <tr>
        <td>
          <h2>{{ 'header'|trans|capitalize }}</h2>
          <ol>
            {% for key, value in headers %}
              <li>{{ key }}: {{ value_dump(value) }}</li>
            {% endfor %}
          </ol>
        </td>
      </tr>
    </table>
  {% endif %}
  <table style="background: #fff;">
    <tr>
      <td>
        <h2>{{ 'stack trace'|trans|capitalize }}</h2>
        <ol>
          {% for line in trace %}
            <li>{{ line }}</li>
          {% endfor %}
        </ol>
      </td>
    </tr>
  </table>
{% endblock %}