<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" bgcolor="#eeeeee">
{% include 'MailExceptionBundle:Mail:exception.head.html.twig' %}
<body style="background: #eeeeee;">
<table style="padding: 10px 20px; margin: 10px auto; border-radius: 5px; border: 1px solid #adadad; background: #f6f6f6">
  <tr>
    <td><h1>{{ class }}</h1></td>
  </tr>
  <tr>
    <td><h2>{{ message }}</h2></td>
  </tr>
</table>
<table class="body" bgcolor="#ffffff">
  <tr>
    <h3>Information</h3>
    <ol>
      <li>Date: {{ 'now' | date("F jS \\a\\t g:ia") }}</li>
      <li>Path: <a href="{{ host }}{{ path }}"> {{ host }}{{ path }}</a></li>
      <li>User: {{ value_dump(user) }}</li>
    </ol>
  </tr>
</table>
<table style="padding: 10px 20px;margin: 10px auto; border-radius: 5px; border: 1px solid #adadad;">
  <tr>
    <h3>Stack Trace</h3>
    <ol>
      {% for line in trace %}
        <li>{{ line }}</li>
      {% endfor %}
    </ol>
  </tr>
</table>
{% if get|length %}
  <table style="padding: 10px 20px;margin: 10px auto; border-radius: 5px; border: 1px solid #adadad;">
    <tr>
      <h3>Get</h3>
      <ol>
        {% for key, value in get %}
          <li>{{ key }}: {{ value_dump(value) }}</li>
        {% endfor %}
      </ol>
    </tr>
  </table>
{% endif %}
{% if post|length %}
  <table style="padding: 10px 20px;margin: 10px auto; border-radius: 5px; border: 1px solid #adadad;">
    <tr>
      <h3>Post</h3>
      <ol>
        {% for key, value in post %}
          <li>{{ key }}: {{ value_dump(value) }}</li>
        {% endfor %}
      </ol>
    </tr>
  </table>
{% endif %}
{% if session|length %}
  <table style="padding: 10px 20px;margin: 10px auto; border-radius: 5px; border: 1px solid #adadad;">
    <tr>
      <h3>Session</h3>
      <ol>
        {% for key, value in session %}
          <li>{{ key }}: {{ value_dump(value) }}</li>
        {% endfor %}
      </ol>
    </tr>
  </table>
{% endif %}
</body>
</html>
